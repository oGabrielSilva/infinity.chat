<%- include('includes/head') %>
    <%- include('includes/nav') %>

    <main class="container">
        <%- include('includes/messages') %> 
        <div class="rounded p-3 mb-4 bg-white text-dark">
            <form action="/login/new" method="POST">
                <p class="h5">Faça seu cadastro</p>
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input required minlength="8" maxlength="25" type="text" class="form-control" name="name" id="name" placeholder="Seu nome">
                </div>
                <div class="form-group">
                  <label for="email">E-mail</label>
                  <input type="email" class="form-control" name="email" id="email" placeholder="Seu e-mail">
                  <small id="emailHelp" class="form-text text-muted">Nunca compartilharemos o seu e-mail.</small>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" minlength="8" maxlength="25" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary mt-4">Criar</button>
            </form>
        </div>
        <div class="rounded p-3 mb-4 bg-white text-dark">
            <form action="/login/entry" method="POST">
                <p class="h5">Ou se já possuir conta</p>
                <div class="form-group">
                  <label for="email-login">E-mail</label>
                  <input type="email" class="form-control" name="email" id="email-login" placeholder="Seu e-mail">
                </div>
                <div class="form-group">
                  <label for="password-login">Password</label>
                  <input type="password" name="password" class="form-control" id="password-login" placeholder="Password">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary mt-4">Entrar</button>
            </form>
        </div>
    </main>

<%- include('includes/footer') %>